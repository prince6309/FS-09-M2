import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int t=sc.nextInt();
        for(int i=0;i<t;i++){
             int x=sc.nextInt();
            int y=sc.nextInt();
            System.out.println(func(x,y));
        }
       
    }
    public static int func(int x,int y){
        int k=x/y;
        int rem=x%y;
        return k+rem;
    }
}
