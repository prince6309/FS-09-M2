import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        int ans=func();
        System.out.println(ans);
        
    }
    public static int func(){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int steps =0;
        int max=-100;
        for(int i=0;i<n;i++){
            int num=sc.nextInt();
            if(num>max){
                max=num;
                steps++;
            }
        }
        return steps;
    }
}
