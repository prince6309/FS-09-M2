import java.io.*;
import java.util.*;

public class Solution {
    public static int func(int n){
        int count=0;
        for(int i=n;i>=1;i /=2){
            count++;
        }
        return count;
    }

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
       int ans=func(n);
        System.out.println(ans);
    }
}
